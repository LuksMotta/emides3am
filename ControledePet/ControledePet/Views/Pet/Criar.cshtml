@model PetModel
@{
    ViewData["Title"] = "Adicionar Pets";
}

<div class="text-center">
    <h1 class="display-4">Adicionar Pet</h1>

</div>

<form asp-controller="Pet" asp-action="Criar" method="post">
    <div class="form-group">
        <label for="exampleInputEmail1">Nome</label>
        <input asp-for="Nome" type="text" class="form-control" placeholder="Insira o Nome">
    </div>
    <div class="form-group">
        <label for="exampleInputPassword1">Raça</label>
        <input asp-for="Raca" type="text" class="form-control" placeholder="Insira a Raça">
    </div>
    <div class="form-group">
        <label for="exampleInputPassword1">Gênero</label>
        <input asp-for="Genero" type=" text" class="form-control" placeholder="Insira o Gênero">
    </div>
    <br />

    <div>
        <button type="submit" class="btn btn-primary">Cadastrar</button>
        <a role="button" class="btn btn-primary" asp-controller="Pet" asp-action="">Voltar</a>
    </div>
</form>